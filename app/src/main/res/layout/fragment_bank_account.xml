<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10dp"
        android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:textSize="@dimen/_40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/account" />



    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp"
        android:layout_marginTop="@dimen/_15dp"
        android:text="@string/login"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textViewAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:padding="@dimen/_10dp"
        android:text="@string/account"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_100dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@null"
        android:gravity="right"
        android:inputType="textEmailAddress"
        android:text="Jibranzafar10@gmail.com"
        android:textColor="@color/colorAccent"
        tools:ignore="RtlHardcoded" />


    <View
        android:id="@+id/line1"
        android:layout_below="@+id/textViewAccount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@android:color/darker_gray"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp"
        android:layout_marginTop="@dimen/_30dp"
        android:drawablePadding="@dimen/_20dp"
        android:text="@string/link_account"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_20sp"
        app:drawableLeftCompat="@drawable/ic_baseline_close_24" />
    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="This Account will be used for all transfers"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="we'll also updated your linked account for next business day transfers which is shown
in your bank account settings."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="@dimen/_40dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:text="@string/transfer"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/rounded_button_white_background"
        android:backgroundTint="@color/grey"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:textColor="@color/colorAccent"
        android:text="Cancel"/>

    </LinearLayout>
